@using Moto_Web.Models;
@model IEnumerable<Company>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary"> </h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Company" asp-action="CreateCompany" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Dodaj</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Nazwa
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Company" asp-action="UpdateCompany" asp-route-Id="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Company" asp-action="DeleteCompany" asp-route-Id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
