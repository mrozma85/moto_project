@using Moto_Web.Models.Dto;
@model IEnumerable<AdTypeDTO>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary"> </h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="AdTypes" asp-action="CreateAdTypes" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Dodaj</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="AdTypes" asp-action="UpdateAdTypes" asp-route-Id="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="AdTypes" asp-action="DeleteAdTypes" asp-route-Id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div class="form-group">
    <div class="col-md-10">
        <a class="btn btn-primary" href="https://localhost:7001/api/AdTypesAPI/ExportExcel" download> Export do pliku Excel</a>
    </div>
    <br />
    <div class="col-md-10">
        <a class="btn btn-primary" href="https://localhost:7001/api/AdTypesAPI/ExportPDF" download> Export do pliku PDF</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
