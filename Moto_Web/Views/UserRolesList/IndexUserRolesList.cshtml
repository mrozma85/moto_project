@using Moto_Web.Models;
@model IEnumerable<ApplicationUserRole>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary"> </h1>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Nazwa użytkownika:
                </th>
                <th>
                    Nazwa roli:
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    

                    <td>
                        <a asp-controller="UserRolesList" asp-action="UpdateUserRolesList" asp-route-Id="@item.UserId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="UserRolesList" asp-action="DeleteUserRolesList" asp-route-Id="@item.UserId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="form-group">
    <div class="col-md-10">
        <a class="btn btn-primary" href="https://localhost:7001/api/UserRolesListAPI/ExportExcel" download> Export do pliku Excel</a>
    </div>
    <br />
    <div class="col-md-10">
        <a class="btn btn-primary" href="https://localhost:7001/api/UserRolesListAPI/ExportPDF" download> Export do pliku PDF</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
