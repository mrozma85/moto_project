@using Moto_Web.Models;
@model ApplicationUserRole

<form asp-action="DeleteUserRolesList">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Usuń</h1>
        <hr />

        <input hidden asp-for="User.Id" />
        <div class="row">

            <div class="col-2">
                <label asp-for="UserId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RoleId" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexUserRolesList" asp-controller="UserRolesList" class="btn-primary btn form-control">Wróc do listy</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Usuń" class="btn btn-danger form-control" />
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}